[
	{ "key": "ctrl+9",                "command": "editor.action.jumpToBracket",
                                     "when": "editorTextFocus" },
    { "key": "alt+shift+e",          "command": "editor.action.previewDeclaration",
                                     "when": "editorTextFocus" },
    { "key": "alt+e",                "command": "editor.action.goToDeclaration",
                                     "when": "editorTextFocus" },
    { "key": "alt+r",                "command": "editor.action.goToTypeDeclaration" },
    { "key": "ctrl+r",                "command": "workbench.action.gotoSymbol" },
    { "key": "shift+ctrl+g",          "command": "workbench.view.git" },
    
	
    // CTRL + i, j, k, l same functionality as arrow keys
	{ "key": "ctrl+j",               "command": "cursorLeft",
                                     "when": "editorTextFocus" },
	{ "key": "ctrl+k",               "command": "cursorDown",
                                     "when": "editorTextFocus" },							 
	{ "key": "ctrl+l",               "command": "cursorRight",
                                     "when": "editorTextFocus" },
	{ "key": "ctrl+i",               "command": "cursorUp",
                                     "when": "editorTextFocus" },		 
	// { "key": "ctrl+cmd+shift+alt+l", "command": "editor.action.smartSelect.grow",
    //                                  "when": "editorTextFocus" },
	// { "key": "ctrl+cmd+shift+alt+j", "command": "editor.action.smartSelect.shrink",
    //                                  "when": "editorTextFocus" },
	{ "key": "ctrl+shift+l",         "command": "cursorRightSelect",
                                     "when": "editorTextFocus" },
	{ "key": "ctrl+alt+l",           "command": "cursorWordRight",
                                     "when": "editorTextFocus" },
	{ "key": "ctrl+shift+alt+l",     "command": "cursorWordRightSelect",
                                     "when": "editorTextFocus" },
    { "key": "ctrl+cmd+j",           "command": "cursorHome",
                                     "when": "editorTextFocus" },
	{ "key": "ctrl+shift+j",         "command": "cursorLeftSelect",
                                     "when": "editorTextFocus" },
	{ "key": "ctrl+alt+j",           "command": "cursorWordLeft",
                                     "when": "editorTextFocus" },
	{ "key": "ctrl+shift+alt+j",     "command": "cursorWordLeftSelect",
                                     "when": "editorTextFocus" },
    { "key": "ctrl+shift+i",         "command": "cursorUpSelect",
                                     "when": "editorTextFocus" },
    { "key": "ctrl+shift+k",         "command": "cursorDownSelect",
                                     "when": "editorTextFocus" }
]
